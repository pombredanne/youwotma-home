#Cambia la tecla de escape a la de menu (Alado de Alt-gr)
#Muy comoda, y no se echa de menos
escape Menu

#Fondo de pantalla
exec feh --bg-scale /home/carl/gtk-2.0/vim-shortcuts.png &

#Cambiar el terminal por defecto a gnome-terminal
bind c exec ratopen gnome-terminal
bind y exec ratopen Navigator firefox
#bind y exec ratopen chrome chromium-bin   # Solo para cuando Minefield esta muy inestable
bind T exec ratopen Mail thunderbird
bind B exec ratopen Banshee banshee-1
bind E exec ratopen skype skype
bind W exec ratopen Pidgin pidgin 
bind g exec ratopen gvim gvim
bind z remove

#Volumen
definekey top XF86AudioRaiseVolume exec dev/ratpoison/volumen.sh up
definekey top XF86AudioLowerVolume exec dev/ratpoison/volumen.sh down
definekey top XF86AudioMute exec dev/ratpoison/volumen.sh mute

#reproduccion de banshee
definekey top XF86AudioNext exec banshee-1 --next
definekey top XF86AudioPrev exec banshee-1 --restart-or-previous
definekey top XF86AudioPlay exec banshee-1 --toggle-playing
definekey top XF86AudioStop exec banshee-1 --stop

exec dev/ratpoison/startup.sh

#copiado de por ahi - reloj mas completo
bind a exec dev/ratpoison/relog.sh 

#Informacion de la bateria
bind t exec ratpoison -c "echo `acpi -V`"

#captura de pantalla
bind Print exec dev/ratpoison/screenshoot.sh

#Siguiente y anterior ventana de la misma aplicacion
bind C-n inext
bind C-p iprev

#Menu de utilidades varias
bind o exec sudo dev/ratpoison/wifi-gk

